@model CarWow.Models.ViewModels.PayViewModel
@{
    ViewBag.Title = "Buyproducts";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class=" row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h4>Ödeme Bilgileri</h4>
                </div>
                @using (Html.BeginForm())
                {
    <div class="card-body">
        @ViewBag.result
        <div class="row">
            <div class="col-md-12">
                <label>Kart Sahibi İsim Soyad</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "İsim Soyad" } })
                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <label>Kart Numarası</label>
                @Html.EditorFor(model => model.CardNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "---- ---- ---- ----" } })
                @Html.ValidationMessageFor(model => model.CardNumber, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-4">
                <label>Son Kullanma Ay</label>
                <select name="ExpM" class="form-select">
                    <option value="01">01</option>
                    <option value="02">02</option>
                    <option value="03">03</option>
                    <option value="04">04</option>
                    <option value="05">05</option>
                    <option value="06">06</option>
                    <option value="07">07</option>
                    <option value="08">08</option>
                    <option value="09">09</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                </select>
            </div>
            <div class="col-md-4">
                <label>Son Kullanma Yıl</label>
                <select name="ExpY" class="form-select">
                    <option value="22">22</option>
                    <option value="23">23</option>
                    <option value="24">24</option>
                    <option value="25">25</option>
                    <option value="26">26</option>
                    <option value="27">27</option>
                    <option value="28">28</option>
                    <option value="29">29</option>
                    <option value="30">30</option>
                    <option value="31">31</option>
                    <option value="32">32</option>
                    <option value="33">33</option>
                </select>
            </div>
            <div class="col-md-4">
                <label>CVV Numarası</label>
                @Html.EditorFor(model => model.Cvv, new { htmlAttributes = new { @class = "form-control", @placeholder = "9" } })
                @Html.ValidationMessageFor(model => model.Cvv, null, new { @class = "text-danger" })
            </div>
        </div>
       
    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success float-end">Ödemeyi Tamamla</button>
                    </div>}
            </div>


        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h4>Sepet Toplamı</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <td>Ara Toplam</td>
                            <td style="font-weight:900">

                                <label class="float-end"> @ViewBag.semitotal ₺</label>
                            </td>
                        </tr>
                        <tr>
                            <td>Vergi</td>
                            <td style="font-weight:900">

                                <label class="float-end"> @ViewBag.totaltax ₺</label>
                            </td>
                        </tr>
                        <tr>
                            <td>Toplam</td>
                            <td style="font-weight:900">

                                <label class="float-end"> @ViewBag.total ₺</label>

                            </td>
                        </tr>

                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

