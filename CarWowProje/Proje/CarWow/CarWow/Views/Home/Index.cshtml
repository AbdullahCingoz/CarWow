@model IEnumerable<CarWow.Models.Product>
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<main>
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Arabaya Dair Her Şey</h1>
                <p class=""</p>
            </div>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6 col-12">
                        <div class="card shadow">
                            <a href="@Url.Action("Detail","Product", new { id= item.ID})" class="link-secondary" style="text-decoration:none">
                                <img src="~/Images/ProductImages/@item.CoverImage" class="card-img" />
                                <div class="card-body">
                                    <div style="min-height:100px;">
                                        <b class="text-dark">@item.Name</b>
                                        @if (item.Description.Length >= 80)
                                        {
                                            <p class="card-text">
                                                @item.Description.Substring(0, 80);
                                            </p>
                                        }
                                        else
                                        {
                                            <p class="card-text">
                                                @item.Description;
                                            </p>
                                        }
                                    </div>
                                </div>
                            </a>
                            <div class="card-footer">
                                <div class="d-grid">
                                    <a href="@Url.Action("Add","UserCart", new { id= item.ID})" class="btn btn-sm btn-primary">Sepete Ekle</a>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

</main>

